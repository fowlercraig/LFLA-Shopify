<head>
  <title>{{ page_title }}</title>
  <meta name="description" content="{{ page_description }}" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="canonical" href="{{ canonical_url }}" /> 
  <link rel="shortcut icon" href="{{ 'favicon.png' | asset_url }}" type="image/png" />
  {% include 'fb-open-graph-tags' %}
  {% include 'twitter-card' %}
  {{ 'main.min.css' | asset_url | stylesheet_tag }}
  {{ '//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js' | script_tag }}
  {{ 'option_selection.js' | asset_url | script_tag }}
  {{ 'api.jquery.js' | shopify_asset_url | script_tag }}
  {% if template contains 'customers' %}
  {{ 'shopify_common.js' | shopify_asset_url | script_tag }}
  {{ 'customer_area.js'  | shopify_asset_url | script_tag }}
  {% endif %}
  {{ content_for_header }}
</head>

<body class="gridlock">
  
  <div id="wrapper">
      
    {% include 'toolbar' %}
    <section id="content"><div>
    {{ content_for_layout }}
    
    </div></section><!-- Content -->

    <footer id="store-footer">
      <div class="row">
        <hr class="desktop-12">
        <div class="desktop-6">
          <p>
            {{ settings.right_content }}

            <div class="social-icons">
            {% for i in (1..6) %}
            {% capture show_social %}show_social_item_{{ i }}{% endcapture %}
            {% capture icon %}show_social_image_{{ i }}{% endcapture %}
            {% capture link %}homeslide_item_{{ i }}_link{% endcapture %}
            {% capture alt %}homeslide_item_{{ i }}_alt{% endcapture %}
            {% capture sub %}homeslide_item_{{ i }}_sub{% endcapture %}
            {% if settings[show_social] %}
            <a href="#"><i class="ss-social-circle ss-icon">{{ settings[icon] }}</i></a>
            {% endif %}             
            {% endfor %}
            </div>

          </p>
        </div>
        <div class="desktop-6 text-right">
          <p>
            {{ settings.left_content }}
          </p>
        </div>
      </div>
    </footer>

  </div><!-- Wrapper -->

  {{ 'timber.js' | asset_url | script_tag }}
  {{ 'main.min.js' | asset_url | script_tag }}
  {{ 'fastclick.min.js' | asset_url | script_tag }}
  
  {% include 'photoswipe' %}

  <script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-35986901-15', 'auto');
  ga('send', 'pageview');

  </script>

</body>

</html>